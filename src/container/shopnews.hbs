<main>
  <div class="row">
    <div class='col-6'>
      <div class="nav">
        <ol class='breadcrumb'>
          {{#each breadcrumb}}
            <li class='breadcrumb-item'>
              <a class="nav-link {{#if @last}} disabled {{/if}}" href=" {{url}} "> {{name}} </a>
            </li> 
          {{/each}}
        </ol>  
      </div>
    </div>
    {{#with newsData}}
      <img class=" img-top col-12" src="https://picsum.photos/400/200" alt="Product photo">
      {{#with head}}
        <h1 class="mt-4 mb-4">{{heading}}</h1>
        <p>{{description}}</p>
      {{/with}}
      {{#each body}}
        <h2>{{title}}</h2>
        <p>{{text}}</p>
      {{/each}}
    {{/with}}
    {{#with newsOtherBlock}}
      {{> shopcard}}
    {{/with}}
    {{> shopaction}}
  </div>
</main>

